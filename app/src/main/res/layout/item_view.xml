<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:id="@+id/card"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image"
            android:src="@drawable/hompe"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="449 000£"
        android:id="@+id/prix"
        android:layout_below="@+id/card"
        android:layout_marginStart="15dp"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appartement"
        android:layout_marginTop="10dp"
        android:id="@+id/type"
        android:layout_below="@+id/prix"
        android:layout_marginStart="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:text="55 m²"
        android:textStyle="bold"
        android:textSize="17dp"
        android:id="@+id/size"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/size"
        android:text=". 3 piéces ."
        android:textSize="17dp"
        android:id="@+id/nb_pieces"
        android:textStyle="bold"
        android:layout_marginTop="-24dp"
        android:layout_toRightOf="@+id/size"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/size"
        android:text=" 1 chambre"
        android:textSize="17dp"
        android:textStyle="bold"
        android:id="@+id/nb_chambre"
        android:layout_marginTop="-24dp"
        android:layout_toRightOf="@+id/nb_pieces"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/size"
        android:text="Paris 9éme (75009)"
        android:textSize="15dp"
        android:id="@+id/localition"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        />
    <View
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_below="@+id/localition"
        android:layout_marginStart="1dp"
        android:background="#AA9A9A"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        />

        </RelativeLayout>
