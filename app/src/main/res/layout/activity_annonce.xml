<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".annonce">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prix"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:background="@drawable/darw2"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imageView"
        android:hint="prix de bien"
        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type de bien"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et2"
                android:background="@drawable/darw2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView"
                android:hint="Appartement , Maison , Parking ....."
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superficie (en m²)"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et3"
                android:background="@drawable/darw2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView"
                android:hint="Superficie"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de piéces"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et4"
                android:background="@drawable/darw2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView"
                android:hint="Nombre de piéces"
                /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de chambre"
            android:textSize="20dp"
            android:layout_marginLeft="12dp"
            />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et5"
                android:background="@drawable/darw2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView"
                android:hint="nb_chambre"
                /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localitation"
            android:textSize="20dp"
            android:layout_marginLeft="12dp"
            />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et6"
                android:background="@drawable/darw2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView"
                android:hint="localisation"
                /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Espace exterieur"
            android:textSize="20dp"
            android:layout_marginLeft="12dp"
            />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et7"
                android:background="@drawable/darw2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView"
                android:hint="balcon ,terrase ,jardin ,picine...."
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acéés"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et8"
                android:background="@drawable/darw2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView"
                android:hint="nombre d'étage"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equippement"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et9"
                android:background="@drawable/darw2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView"
                android:hint="votre bien est equiper"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annexes"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et12"
                android:background="@drawable/darw2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView"
                android:hint="parking ,box,cave"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"
                />
            <EditText
                android:id="@+id/discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez votre texte ici"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:minLines="5"
                android:maxLines="10"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"
                android:scrollbars="vertical"
                android:background="@drawable/edit_text_background"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/imageView"
                android:layout_width="420dp"
                android:layout_height="420dp"
                android:background="@drawable/ajouterphoto"
               android:layout_marginLeft="-20dp"
                />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et7"
        android:text="insert"
        android:id="@+id/btn"
        android:layout_marginBottom="150dp"
        />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginLeft="-15dp"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/baseline_person_outline_24"
            android:text="    Mon compte"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:id="@+id/comptea"
            android:layout_marginLeft="289dp"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/propietairea"
            android:drawableTop="@drawable/baseline_key_24"
            android:text="  Propriétaire"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-155dp"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/baseline_star_border_24"
            android:text="     Favoris"
            android:textSize="12dp"
            android:id="@+id/annoncea"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-137dp"
            />
        <TextView
            android:layout_width="67dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/baseline_search_24"
            android:text="  Recherche"
            android:id="@+id/recherchea"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-138dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/hooo"
            android:text="       Accueil"
            android:textSize="12dp"
            android:id="@+id/hommya"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-150dp"
            />


    </LinearLayout>

</RelativeLayout>