<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".se_connecter">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtc"
        android:text="Inscription"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtc"
        android:layout_marginTop="20dp"
        android:id="@+id/email_inscrit"
        android:background="@drawable/dr"
        android:hint="Adresse email*"
        android:textColor="#BAAEAE"
        android:layout_margin="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_inscrit"
        android:layout_marginTop="20dp"
        android:background="@drawable/dr"
        android:hint="Mot de passe*"
        android:id="@+id/pass_incrit"
        android:textColor="#BAAEAE"
        android:layout_margin="15dp"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/pass_incrit"
        android:id="@+id/progressbar"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="M'inscrire"
        android:textSize="17dp"
        android:id="@+id/btn_incrit"
        android:paddingLeft="23dp"
        android:backgroundTint="#222"
        android:layout_below="@+id/progressbar"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="120dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#D5D0D0"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DÃ©ja un compte ?"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:textSize="15dp"
            android:id="@+id/aaaa"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="240dp"
            android:textColor="#CF0606"
            />
    </RelativeLayout>
</RelativeLayout>