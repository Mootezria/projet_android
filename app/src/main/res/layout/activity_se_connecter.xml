<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".se_connecter">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtc"
        android:text="Connexion"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/emaillog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtc"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/dr"
        android:hint="Adresse email*"
        android:textColor="#BAAEAE" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emaillog"
        android:layout_marginTop="20dp"
        android:background="@drawable/dr"
        android:hint="Mot de passe*"
        android:id="@+id/passlog"
        android:textColor="#BAAEAE"
        android:layout_margin="15dp"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/passlog"
        android:id="@+id/progressbarh"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Me connecter"
        android:textSize="17dp"
        android:id="@+id/btnlog"
        android:paddingLeft="23dp"
        android:backgroundTint="#222"
        android:layout_below="@+id/progressbarh"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="120dp"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Mot de passe oublier"
    android:layout_below="@+id/btnlog"
    android:textColor="#BAAEAE"
    android:layout_marginLeft="130dp"
    android:layout_marginTop="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#D5D0D0"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pas encore de compte ?"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inscrption"
            android:textSize="15dp"
            android:id="@+id/to_register"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="240dp"
            android:textColor="#CF0606"
            />
    </RelativeLayout>
</RelativeLayout>