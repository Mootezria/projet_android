<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:background="#87D5B1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SeLoger"
        android:textStyle="bold|italic"
        android:textSize="50dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-150dp"
        android:layout_marginBottom="150dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Que rechercher-vous?"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="-80dp"
        android:textStyle="bold"
        android:layout_marginBottom="200dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/textView1" />


    <ImageView
            android:layout_below="@id/textView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/img"
            android:layout_marginRight="200dp"
            android:layout_marginTop="-150dp"
            android:layout_marginBottom="200dp"
            android:src="@drawable/baseline_house_24"

            />
    <View
        android:layout_width="5dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/img"
        android:layout_below="@+id/img"
        android:layout_marginTop="-270dp"
        android:layout_marginStart="-200dp"
        android:background="@android:color/white"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="-200dp"
            android:layout_marginBottom="200dp"
            android:text="Acheter"
            android:layout_marginLeft="59dp"
            android:layout_below="@+id/img"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="-200dp"
        android:layout_marginBottom="200dp"
        android:text="Louer"
        android:layout_marginLeft="270dp"
        android:layout_below="@+id/img"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <ImageView
        android:layout_below="@id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-150dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/baseline_house_24"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vous êtes propriétaire ?"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/img"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-100dp"
        android:id="@+id/text5"
        />
    <ImageView
        android:layout_below="@id/text5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/image"
        android:layout_marginRight="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_house_24"

        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-50dp"
        android:text="  Vendre
        \nmon bien"
        android:paddingRight="-52dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/img"
        android:textColor="@android:color/white"
        android:textSize="23dp" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="  Estimer
        \nmon bien"
        android:layout_marginBottom="-50dp"
        android:layout_marginLeft="290dp"
        android:layout_below="@+id/img"
        android:textColor="#EFEFEF"
        android:textSize="22dp" />

    <ImageView
        android:layout_below="@id/text5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_house_24"
        />
    <View
        android:layout_width="5dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/img"
        android:layout_below="@+id/img"
        android:layout_marginTop="-35dp"
        android:layout_marginStart="-270dp"
        android:background="@android:color/white"/>
    <View
        android:layout_width="5dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/img"
        android:layout_below="@+id/img"
        android:layout_marginTop="-35dp"
        android:layout_marginStart="-140dp"
        android:background="@android:color/white"/>
    <ImageView
        android:layout_below="@id/text5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_house_24"
        />
    <TextView
        android:id="@+id/df"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-50dp"
        android:text="Mettre en
       \n  location"
        android:layout_marginLeft="160dp"
        android:paddingRight="-52dp"
        android:layout_below="@+id/img"
        android:textColor="@android:color/white"
        android:textSize="23dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/df"
        android:text="Déjà un compte ? Connextion >"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="-200dp"
        />
    </RelativeLayout>

