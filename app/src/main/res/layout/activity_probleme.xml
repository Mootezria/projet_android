<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".probleme">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type de message"
                android:id="@+id/tyui"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etc"
                android:background="@drawable/darw2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="29dp"
                android:padding="12dp"
                android:layout_below="@+id/tyui"
                android:layout_marginTop="10dp"
                android:hint="Suggestion, nous encourage, bug, autre"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Votre message"
                android:id="@+id/mess"
                android:layout_below="@id/etc"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/discription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez votre texte ici"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:minLines="5"
                android:layout_below="@+id/mess"
                android:maxLines="10"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:scrollbars="vertical"
                android:background="@drawable/edit_text_background"
                android:padding="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lmail"
                android:background="@drawable/darw2"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="29dp"
                android:padding="12dp"
                android:layout_below="@+id/discription1"
                android:layout_marginTop="10dp"
                android:hint="Votre Email"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lmail"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="150dp"
                android:text="Envoyer"
                android:backgroundTint="@color/black"
                android:id="@+id/btnEnvoyer"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
